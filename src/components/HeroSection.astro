---
export interface Props {
  title: string;
  subtitle: string;
  primaryCtaText: string;
  primaryCtaLink: string;
  secondaryCtaText?: string;
  secondaryCtaLink?: string;
  backgroundImage: string;
  // optional natural image dimensions to avoid layout shifts
  backgroundWidth?: number;
  backgroundHeight?: number;
}

const {
  title,
  subtitle,
  primaryCtaText,
  primaryCtaLink,
  secondaryCtaText,
  secondaryCtaLink,
  backgroundImage,
  backgroundWidth = 1920,
  backgroundHeight = 1080,
} = Astro.props as Props;
---

<section class="relative isolate overflow-hidden bg-gray-900">
  <img 
    src={backgroundImage}
    alt="Contadores trabajando en una oficina moderna"
    class="absolute inset-0 -z-10 h-full w-full object-cover object-right md:object-center"
    width={backgroundWidth}
    height={backgroundHeight}
    loading="eager"
    decoding="async"
    {...({'fetchpriority': 'high'} as any)}
  />

  <div class="absolute inset-0 bg-gradient-to-r from-black/80 via-black/60 to-transparent -z-10"></div>

  <div class="mx-auto max-w-7xl px-6 lg:px-8 py-24 sm:py-32 lg:py-40">
    <div class="max-w-2xl text-center md:text-left">
      <h1 class="text-4xl font-bold tracking-tight text-white sm:text-6xl">
        {title}
      </h1>
      <p class="mt-6 text-lg leading-8 text-gray-300">
        {subtitle}
      </p>
      
      <div class="mt-10 flex items-center gap-x-6 justify-center md:justify-start">
        <a 
          href={primaryCtaLink} 
          class="rounded-md bg-blue-600 px-4 py-3 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 transition-colors duration-300"
        >
          {primaryCtaText}
        </a>
        {secondaryCtaText && secondaryCtaLink && (
          <a href={secondaryCtaLink} class="text-sm font-semibold leading-6 text-white group">
            {secondaryCtaText} <span aria-hidden="true" class="group-hover:translate-x-1 transition-transform duration-300">â†’</span>
          </a>
        )}
      </div>
    </div>
  </div>
</section>