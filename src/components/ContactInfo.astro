---
import { Icon } from 'astro-icon/components';
import { loadLocaleSync } from '../utils/i18n';

// Read lang prop (if passed) without TypeScript inline casting
const props = Astro.props as Record<string, any>;
const lang = props.lang || 'es';
const locale = props.locale || loadLocaleSync(lang);
---

<div class="space-y-8">
  <div class="bg-white rounded-xl shadow-lg p-8">
  <h2 class="text-3xl font-bold text-gray-900 mb-6">{locale['contact.title'] ?? 'Información de Contacto'}</h2>
    <div class="space-y-6">
      <div class="flex items-start">
        <div class="flex-shrink-0">
          <div class="flex items-center justify-center w-12 h-12 bg-blue-100 rounded-full">
            <Icon name="mdi:map-marker" class="w-6 h-6 text-blue-600" />
          </div>
        </div>
        <div class="ml-4">
          <h3 class="text-lg font-semibold text-gray-900">{locale['contact.info.addressLabel'] ?? 'Dirección'}</h3>
          <p class="text-gray-600 mt-1">
            46 C. Antonio R. Barcelo, Cidra, 00739
          </p>
        </div>
      </div>

      <div class="flex items-start">
        <div class="flex-shrink-0">
          <div class="flex items-center justify-center w-12 h-12 bg-blue-100 rounded-full">
            <Icon name="mdi:phone" class="w-6 h-6 text-blue-600" />
          </div>
        </div>
        <div class="ml-4">
          <h3 class="text-lg font-semibold text-gray-900">{locale['contact.info.phoneLabel'] ?? 'Teléfono'}</h3>
          <p class="text-gray-600 mt-1">
            <a href="tel:+1 (787) 398-7233" class="hover:text-blue-600 transition-colors">
              +1 (787) 398-7233
            </a>
          </p>
        </div>
      </div>

      <div class="flex items-start">
        <div class="flex-shrink-0">
          <div class="flex items-center justify-center w-12 h-12 bg-blue-100 rounded-full">
            <Icon name="mdi:email" class="w-6 h-6 text-blue-600" />
          </div>
        </div>
        <div class="ml-4">
          <h3 class="text-lg font-semibold text-gray-900">{locale['contact.info.emailLabel'] ?? 'Email'}</h3>
          <p class="text-gray-600 mt-1">
            <a href="mailto:cqvqpsc@gmail.com" class="hover:text-blue-600 transition-colors">
              cqvqpsc@gmail.com
            </a>
          </p>
        </div>
      </div>

      <div class="flex items-start">
        <div class="flex-shrink-0">
          <div class="flex items-center justify-center w-12 h-12 bg-blue-100 rounded-full">
            <Icon name="mdi:clock" class="w-6 h-6 text-blue-600" />
          </div>
        </div>
        <div class="ml-4">
          <h3 class="text-lg font-semibold text-gray-900">{locale['contact.info.hoursLabel'] ?? 'Horario'}</h3>
          <p class="text-gray-600 mt-1">
            Lunes - Viernes: 9:00 AM - 5:00 PM<br />
            Sábado: 9:00 AM - 1:00 PM<br />
            Domingo: Cerrado
          </p>
        </div>
      </div>
    </div>
  </div>
</div>